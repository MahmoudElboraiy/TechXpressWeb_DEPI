
@{
    ViewData["Title"] = "Home";
}

<!-- Navigation -->


<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Welcome to TechXpress</h1>
        <p class="lead">Your one-stop shop for the latest electronics and gadgets</p>
        <a href="#" class="btn btn-primary btn-lg mt-3">Shop Now</a>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Shop by Category</h2>
        <div class="row g-4">
            <div class="col-md-3 col-6">
                <a href="#" class="text-decoration-none">
                    <div class="card category-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-mobile-alt fa-3x mb-3 text-primary"></i>
                            <h5 class="card-title">Smartphones</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3 col-6">
                <a href="#" class="text-decoration-none">
                    <div class="card category-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-laptop fa-3x mb-3 text-primary"></i>
                            <h5 class="card-title">Laptops</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3 col-6">
                <a href="#" class="text-decoration-none">
                    <div class="card category-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-headphones fa-3x mb-3 text-primary"></i>
                            <h5 class="card-title">Audio</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3 col-6">
                <a href="#" class="text-decoration-none">
                    <div class="card category-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-tablet-alt fa-3x mb-3 text-primary"></i>
                            <h5 class="card-title">Tablets</h5>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>


<!-- Featured Products -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Featured Products</h2>
        <div class="row">
            <!-- Repeat cards or use a loop from your model -->
            <div class="col-md-4 mb-4">
                <div class="card product-card h-100">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Product">
                    <div class="card-body">
                        <h5 class="card-title">Smartphone X</h5>
                        <p class="card-text">Latest flagship smartphone with advanced features.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold">$799</span>
                            <button class="btn btn-sm btn-outline-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Add more cards here -->
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Products" asp-action="viewProducts" class="btn btn-outline-dark">View All Products</a>
        </div>

    </div>
</section>

<!-- Footer -->
<footer class="bg-dark text-white py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h5>TechXpress</h5>
                <p>Your trusted source for the latest electronics and gadgets.</p>
            </div>
            <div class="col-md-4">
                <h5>Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white">Home</a></li>
                    <li><a href="#" class="text-white">Products</a></li>
                    <li><a href="#" class="text-white">About Us</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h5>Contact</h5>
                <p><i class="fas fa-envelope me-2"></i> info@techxpress.com</p>
                <p><i class="fas fa-phone me-2"></i> +1 (555) 123-4567</p>
            </div>
        </div>
        <hr>
        <div class="text-center">
            <p>&copy; 2023 TechXpress. All rights reserved.</p>
        </div>
    </div>
</footer>

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1518770660439-4636190af475');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 100px 0;
        }
        .product-card {
            transition: transform 0.3s;
        }
        .product-card:hover {
            transform: translateY(-5px);
        }
    </style>
}
