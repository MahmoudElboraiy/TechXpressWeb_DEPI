@{
    ViewData["Title"] = "AdminDash";
}


<!DOCTYPE html>
<html lang="en">
<head>
  
    
    <style>
        .sidebar {
            min-height: calc(100vh - 56px);
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .admin-content {
            padding: 20px;
        }

        .table img {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }

        .product-form-container {
            display: none;
        }

        .admin-card {
            transition: transform 0.3s;
            border-radius: 10px;
            overflow: hidden;
        }

            .admin-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .card-icon {
            font-size: 2rem;
            color: #0d6efd;
        }
    </style>
</head>
<body>
  

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-2 col-md-3 p-0 bg-light sidebar">
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action active" data-target="dashboard">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                    <a asp-controller="Dashboard" asp-action="ManageProduct" class="list-group-item list-group-item-action">
                        <i class="fas fa-box me-2"></i> Products
                    </a>
                    <a asp-controller="Dashboard" asp-action="ManageCategories" class="list-group-item list-group-item-action">
                        <i class="fas fa-tags me-2"></i> Categories
                    </a>
                    <a href="#" class="list-group-item list-group-item-action" data-target="clients">
                        <i class="fas fa-users me-2"></i> Clients
                    </a>
                    <a href="#" class="list-group-item list-group-item-action" data-target="orders">
                        <i class="fas fa-shopping-cart me-2"></i> Orders
                    </a>
                    <a href="#" class="list-group-item list-group-item-action" data-target="settings">
                        <i class="fas fa-cog me-2"></i> Settings
                    </a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-10 col-md-9 admin-content">
                <!-- Dashboard Section -->
                <div id="dashboard-section" class="content-section">
                    <h2 class="mb-4">Dashboard</h2>
                    <div class="row">
                        <div class="col-md-3 mb-4">
                            <div class="card admin-card">
                                <div class="card-body text-center">
                                    <div class="card-icon mb-3">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <h5 class="card-title">Products</h5>
                                    <h2 class="mb-0" id="product-count">12</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-4">
                            <div class="card admin-card">
                                <div class="card-body text-center">
                                    <div class="card-icon mb-3">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <h5 class="card-title">Clients</h5>
                                    <h2 class="mb-0" id="client-count">45</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-4">
                            <div class="card admin-card">
                                <div class="card-body text-center">
                                    <div class="card-icon mb-3">
                                        <i class="fas fa-shopping-cart"></i>
                                    </div>
                                    <h5 class="card-title">Orders</h5>
                                    <h2 class="mb-0" id="order-count">28</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-4">
                            <div class="card admin-card">
                                <div class="card-body text-center">
                                    <div class="card-icon mb-3">
                                        <i class="fas fa-dollar-sign"></i>
                                    </div>
                                    <h5 class="card-title">Revenue</h5>
                                    <h2 class="mb-0" id="revenue">$12,450</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Recent Orders</h5>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Order ID</th>
                                                    <th>Customer</th>
                                                    <th>Date</th>
                                                    <th>Status</th>
                                                    <th>Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>#ORD-001</td>
                                                    <td>John Doe</td>
                                                    <td>May 10, 2023</td>
                                                    <td><span class="badge bg-success">Delivered</span></td>
                                                    <td>$299</td>
                                                </tr>
                                                <tr>
                                                    <td>#ORD-002</td>
                                                    <td>Jane Smith</td>
                                                    <td>May 9, 2023</td>
                                                    <td><span class="badge bg-primary">Shipped</span></td>
                                                    <td>$129</td>
                                                </tr>
                                                <tr>
                                                    <td>#ORD-003</td>
                                                    <td>Mike Johnson</td>
                                                    <td>May 8, 2023</td>
                                                    <td><span class="badge bg-warning">Processing</span></td>
                                                    <td>$499</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Top Selling Products</h5>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Product</th>
                                                    <th>Category</th>
                                                    <th>Sales</th>
                                                    <th>Revenue</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>iPhone 13 Pro</td>
                                                    <td>Smartphones</td>
                                                    <td>127</td>
                                                    <td>$118,618</td>
                                                </tr>
                                                <tr>
                                                    <td>MacBook Pro</td>
                                                    <td>Laptops</td>
                                                    <td>89</td>
                                                    <td>$133,500</td>
                                                </tr>
                                                <tr>
                                                    <td>AirPods Pro</td>
                                                    <td>Accessories</td>
                                                    <td>215</td>
                                                    <td>$53,750</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

           

                <!-- Clients Section -->
                <div id="clients-section" class="content-section" style="display: none;">
                    <h2 class="mb-4">Client Management</h2>

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover" id="clients-table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Orders</th>
                                            <th>Joined Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="clients-table-body">
                                        <!-- Client rows will be loaded dynamically -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orders Section -->
                <div id="orders-section" class="content-section" style="display: none;">
                    <h2 class="mb-4">Orders Management</h2>

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover" id="orders-table">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer</th>
                                            <th>Date</th>
                                            <th>Items</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="orders-table-body">
                                        <!-- Order rows will be loaded dynamically -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Settings Section -->
                <div id="settings-section" class="content-section" style="display: none;">
                    <h2 class="mb-4">Settings</h2>

                    <div class="card">
                        <div class="card-body">
                            <form id="settings-form">
                                <div class="mb-3">
                                    <label for="storeName" class="form-label">Store Name</label>
                                    <input type="text" class="form-control" id="storeName" value="TechXpress">
                                </div>
                                <div class="mb-3">
                                    <label for="storeEmail" class="form-label">Store Email</label>
                                    <input type="email" class="form-control" id="storeEmail" value="info@techxpress.com">
                                </div>
                                <div class="mb-3">
                                    <label for="storePhone" class="form-label">Store Phone</label>
                                    <input type="text" class="form-control" id="storePhone" value="+1 (555) 123-4567">
                                </div>
                                <div class="mb-3">
                                    <label for="storeAddress" class="form-label">Store Address</label>
                                    <textarea class="form-control" id="storeAddress" rows="3">123 Tech Street, Silicon Valley, CA 94043, USA</textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="storeCurrency" class="form-label">Currency</label>
                                    <select class="form-select" id="storeCurrency">
                                        <option value="USD" selected>USD ($)</option>
                                        <option value="EUR">EUR (€)</option>
                                        <option value="GBP">GBP (£)</option>
                                    </select>
                                </div>
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary">Save Settings</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this item? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirm-delete">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- View Client Modal -->
    <div class="modal fade" id="viewClientModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Client Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="client-details">
                    <!-- Client details will be loaded dynamically -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
